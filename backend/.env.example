# ChronoTrace Backend Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=ChronoTrace
APP_VERSION=0.1.0
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000

# AWS Settings
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# AWS Bedrock Model Settings
# Nova 2 Lite for agent reasoning
BEDROCK_MODEL_ID=us.amazon.nova-lite-v1:0
# Titan for embeddings (used by Embedding Generator Agent)
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./data/chronotrace.db

# Storage Paths (relative to backend directory)
DATA_DIR=./data
VIDEOS_DIR=./data/videos
PROCESSED_DIR=./data/processed
THUMBNAILS_DIR=./data/thumbnails
AUDIO_DIR=./data/audio

# Video Processing Settings
SEGMENT_DURATION=15
THUMBNAIL_TIMESTAMP=3
THUMBNAIL_WIDTH=320
THUMBNAIL_HEIGHT=180

# Qdrant Vector Database Settings
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=video_segments
EMBEDDING_DIMENSION=1024

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=console  # json or console
